<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DuzheActivity">

    <TextView
        android:id="@+id/tv_duzhe-title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="50dp"
        android:text="读者界面"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_duzhe_chaxun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询书籍"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_duzhe_jieyue"
        app:layout_constraintEnd_toEndOf="@+id/tv_duzhe-title"
        app:layout_constraintStart_toStartOf="@+id/tv_duzhe-title"
        app:layout_constraintTop_toBottomOf="@+id/tv_duzhe-title" />

    <Button
        android:id="@+id/btn_duzhe_jieyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借阅书籍"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_duzhe_yijie"
        app:layout_constraintEnd_toEndOf="@+id/btn_duzhe_chaxun"
        app:layout_constraintStart_toStartOf="@+id/btn_duzhe_chaxun"
        app:layout_constraintTop_toBottomOf="@+id/btn_duzhe_chaxun" />

    <Button
        android:id="@+id/btn_duzhe_yijie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已借书籍"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_duzhe_guihuan"
        app:layout_constraintEnd_toEndOf="@+id/btn_duzhe_jieyue"
        app:layout_constraintStart_toStartOf="@+id/btn_duzhe_jieyue"
        app:layout_constraintTop_toBottomOf="@+id/btn_duzhe_jieyue" />

    <Button
        android:id="@+id/btn_duzhe_guihuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="归还书籍"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_duzhe_exit"
        app:layout_constraintEnd_toEndOf="@+id/btn_duzhe_yijie"
        app:layout_constraintStart_toStartOf="@+id/btn_duzhe_yijie"
        app:layout_constraintTop_toBottomOf="@+id/btn_duzhe_yijie" />

    <Button
        android:id="@+id/btn_duzhe_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_duzhe_guihuan"
        app:layout_constraintStart_toStartOf="@+id/btn_duzhe_guihuan"
        app:layout_constraintTop_toBottomOf="@+id/btn_duzhe_guihuan" />
</android.support.constraint.ConstraintLayout>