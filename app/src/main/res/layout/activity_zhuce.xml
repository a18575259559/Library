<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZhuceActivity">

    <EditText
        android:id="@+id/edtTxt_zhuce_zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_zhuce_zhanghao"
        app:layout_constraintTop_toBottomOf="@+id/tv_zhuce_title" />

    <TextView
        android:id="@+id/tv_zhuce_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:text="读者注册"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_zhuce_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="注册"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_zhuce_exit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_zhuce_mima" />

    <Button
        android:id="@+id/btn_zhuce_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="36sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_zhuce_zhuce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_zhuce_zhuce" />

    <EditText
        android:id="@+id/edtTxt_zhuce_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_zhuce_mima"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_zhuce_zhanghao" />

    <TextView
        android:id="@+id/tv_zhuce_zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号："
        android:textSize="36sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtTxt_zhuce_zhanghao"
        app:layout_constraintEnd_toStartOf="@+id/edtTxt_zhuce_zhanghao"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_zhuce_mima"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="密码："
        android:textSize="36sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtTxt_zhuce_mima"
        app:layout_constraintEnd_toStartOf="@+id/edtTxt_zhuce_mima"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>